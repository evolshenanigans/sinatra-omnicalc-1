<form action="/payment/result" method="get">
  <div>
    <label for="apr">APR:</label>
    <input id="aprinput" type="number" name="apr" placeholder="E.g. 5.42" step="0.0001">
  </div>
  <div>
    <label for="years">Number of years:</label>
    <input id="numberofyears" type="number" name="years" placeholder="How many years to repay?">
  </div>
  <div>
    <label for="principal">Principal:</label>
    <input id="principal" type="number" name="principal" placeholder="How much principal?" step="0.01">
  </div>
  <button type="submit">Calculate monthly payment</button>
</form>

